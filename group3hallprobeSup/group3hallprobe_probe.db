record(stringout, "$(P)$(SENSORID):NAME") {
    field(VAL, "$(NAME)")
	field(PINI, "YES")
}

record(bo, "$(P)$(SENSORID):INIT") {
    field(DESC, "Initialize probe channel")
    field(DTYP, "stream")
    field(OUT, "@group3hallprobe.proto init($(SENSORID)) $(PORT)")
	field(PINI, "YES")
	
	field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:$(SENSORID):INIT")
    field(SDIS, "$(P)DISABLE")
}

record(stringin, "$(P)$(SENSORID):FIELD:_RAWSTR") {
    field(DESC, "Raw field response string")
    field(DTYP, "stream")
    field(INP, "@group3hallprobe.proto get_field($(SENSORID)) $(PORT)")
	field(SCAN, "$(FIELD_SCAN_RATE)")
	
	field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:$(SENSORID):FIELD:_RAW")
    field(SDIS, "$(P)DISABLE")
}

record(ai, "$(P)$(SENSORID):FIELD:_RAW") {
    field(DESC, "Raw field")
    field(INP, "$(P)$(SENSORID):FIELD:_RAWSTR CP MSS")
	field(EGU, "Gauss")
	field(PREC, "3")
}

record(calc, "$(P)$(SENSORID):FIELD") {
    field(DESC, "Field")
    field(INPA, "$(P)$(SENSORID):FIELD:_RAW CP MSS")
	field(B, "$(SCALE)")
	field(CALC, "A*B")
	field(EGU, "Gauss")
	field(PREC, "3")
	field(ASG, "READONLY")
}

record(ai, "$(P)$(SENSORID):TEMPERATURE") {
    field(DESC, "Raw field")
    field(DTYP, "stream")
    field(INP, "@group3hallprobe.proto get_temp($(SENSORID)) $(PORT)")
	field(SCAN, "$(TEMP_SCAN_RATE)")
	field(EGU, "C")
	field(PREC, "3")
	
	field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:$(SENSORID):TEMPERATURE:_RAW")
    field(SDIS, "$(P)DISABLE")
}

record(mbbo, "$(P)$(SENSORID):RANGE:SP") {
    field(DESC, "Raw field")
    field(DTYP, "stream")
    field(OUT, "@group3hallprobe.proto set_range($(SENSORID)) $(PORT)")
	field(ZRST, "0.3 Tesla")
	field(ONST, "0.6 Tesla")
	field(TWST, "1.2 Tesla")
	field(THST, "3.0 Tesla")
	
	field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:$(SENSORID):RANGE:SP")
    field(SDIS, "$(P)DISABLE")
}

record(mbbo, "$(P)$(SENSORID):STATEMACHINE:STATE") {
    field(ZRST, "r0")
    field(ONST, "r1")
    field(TWST, "r2")
    field(THST, "r3")
    field(FRST, "disconnected")
	field(FRSV, "MAJOR")
}

record(ao, "$(P)$(SENSORID):STATEMACHINE:STATE_CHANGE_DELAY") {
    field(VAL, "2.0")
	field(EGU, "s")
	field(PINI, "YES")
}


